{% extends 'base.html.twig' %}

{% block title %}Panel Administracyjny{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center page-header">
                    <div>
                        <h1 class="text-primary mb-0">
                            <i class="fas fa-cog me-2"></i>Panel Administracyjny
                        </h1>
                        <p class="text-muted">Zarządzaj systemem do bezzwłocznego informowania o zagrożeniach</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Emergency Alerts Card -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Alerty Zagrożeń</h5>
                        <p class="card-text">Zarządzaj alertami o zagrożeniach w systemie</p>
                        <a href="{{ path('app_emergency_alert_index') }}" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-1"></i> Przejdź
                        </a>
                    </div>
                    <div class="card-footer bg-white">
                        <small class="text-muted">Ostatnia aktualizacja: {{ "now"|date("d.m.Y H:i") }}</small>
                    </div>
                </div>
            </div>

            <!-- User Management Card -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-users text-info" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Zarządzanie Użytkownikami</h5>
                        <p class="card-text">Zarządzaj kontami użytkowników systemu</p>
                        <a href="{{ path('app_user_index') }}" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-1"></i> Przejdź
                        </a>
                    </div>
                    <div class="card-footer bg-white">
                        <small class="text-muted">Ostatnia aktualizacja: {{ "now"|date("d.m.Y H:i") }}</small>
                    </div>
                </div>
            </div>

            <!-- User Reports Card -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-clipboard-list text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Zgłoszenia Użytkowników</h5>
                        <p class="card-text">Przeglądaj i zarządzaj zgłoszeniami od użytkowników</p>
                        <a href="{{ path('app_user_report_index') }}" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-1"></i> Przejdź
                        </a>
                    </div>
                    <div class="card-footer bg-white">
                        <small class="text-muted">Ostatnia aktualizacja: {{ "now"|date("d.m.Y H:i") }}</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Statystyki Systemu</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center mb-3 mb-md-0">
                                <h2 class="text-primary">{{ alerts_count|default(0) }}</h2>
                                <p class="text-muted mb-0">Aktywnych alertów</p>
                            </div>
                            <div class="col-md-4 text-center mb-3 mb-md-0">
                                <h2 class="text-success">{{ users_count|default(0) }}</h2>
                                <p class="text-muted mb-0">Zarejestrowanych użytkowników</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <h2 class="text-warning">{{ reports_count|default(0) }}</h2>
                                <p class="text-muted mb-0">Zgłoszeń użytkowników</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
