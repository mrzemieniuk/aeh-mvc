{% extends 'base.html.twig' %}

{% block title %}Edycja Alertu Zagrożenia{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center page-header">
                    <div>
                        <h1 class="text-primary mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Edycja Alertu Zagrożenia
                        </h1>
                        <p class="text-muted">Modyfikuj dane alertu zagrożenia w systemie</p>
                    </div>
                    <div>
                        <a href="{{ path('app_emergency_alert_index') }}" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i> Powrót do listy
                        </a>
                        <a href="{{ path('app_emergency_alert_show', {'id': emergency_alert.id}) }}" class="btn btn-info">
                            <i class="fas fa-eye me-1"></i> Pokaż szczegóły
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                {{ include('admin/emergency_alert/_form.html.twig', {
                    'button_label': 'Zapisz zmiany',
                    'form_label': 'Dane alertu zagrożenia'
                }) }}
            </div>
        </div>
    </div>
{% endblock %}
