{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">{{ form_label is defined ? form_label : 'Informacje o użytkowniku' }}</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(field) }}
                                </div>
                                {% if field.vars.help is defined and field.vars.help %}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>{{ field.vars.help }}
                                    </small>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Powrót
            </a>
            <button class="btn btn-primary">
                <i class="fas fa-save me-1"></i> {{ button_label|default('Zapisz') }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
